SELECT u.nombre AS Alumno, u.dni, c.nombre AS Curso, i.estado AS Estado_Inscripcion
FROM Inscripcion i
JOIN Usuario u ON i.id_usuario = u.id_usuario
JOIN Curso c ON i.id_curso = c.id_curso;

